<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/Cream"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="9">

        <GridLayout
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="2"
            android:rowCount="1"
            android:elevation="3dp"
            android:background="@drawable/botder"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/box_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_columnWeight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="온습도 측정"
                    android:textSize="45sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="지금 우리집 온도는?"
                    android:textSize="28sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/TempText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00.00 °C"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:textColor="@color/Brown"/>
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/sun"/>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="2"
            android:rowCount="2"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:background="@drawable/botder"
                android:orientation="vertical"
                android:elevation="3dp"
                android:padding="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/temp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="화씨"/>

                <TextView
                    android:id="@+id/FTempText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00.00 °F"
                    android:textColor="@color/Brown"
                    android:textStyle="bold"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:background="@drawable/botder"
                android:elevation="3dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/humi" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="습도"/>

                <TextView
                    android:id="@+id/HumiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00.00 %"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/Brown"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:background="@drawable/botder"
                android:elevation="3dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/search"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="온습도 측정 시간"/>

                <TextView
                    android:id="@+id/DateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="YY-MM-DD-TT-MM-SS"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/Brown"/>
            </LinearLayout>

            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:background="@drawable/botder"
                android:elevation="3dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/time"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/Brown"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="오늘 날짜"/>

                <TextView
                    android:id="@+id/ToDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="YY-MM-DD"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/Brown"/>
            </LinearLayout>
        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/Antique3"
        android:clickable="true"
        android:focusable="true"
        android:layout_weight="1"
        android:padding="10dp">

        <ImageView
            android:id="@+id/Home"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/home"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <ImageView
            android:id="@+id/Graph"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/graph"/>

    </LinearLayout>
</LinearLayout>